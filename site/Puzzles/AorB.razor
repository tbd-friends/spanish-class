@using site.Models
<div class="prompts">
    @foreach (var question in Puzzle.Questions)
    {
        <div class="prompt">@question.Text <RadioGroup Name="@Guid.NewGuid().ToString()" Options="@question.Options" /></div>
    }
</div>

<div>
    Answer;

    @foreach (var answer in Puzzle.Answers)
    {
        <label><input type="number" @bind-value="answer.Value" />@answer.Description</label>
    }
    <div class="message-out">@Message</div>
    <button @onclick="Validate">Complete</button>
</div>

@code {

    [Parameter] public EventCallback OnComplete { get; set; }
    [Parameter] public AorBPuzzle Puzzle { get; set; }
    private string Message { get; set; }

    private void Validate()
    {
        if (Puzzle.Answers.All(a => a.Value == a.Expected))
        {
            OnComplete.InvokeAsync(this);
        }

        Message = "Wrong answer!";
    }
}
